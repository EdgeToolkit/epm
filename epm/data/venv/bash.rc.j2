{% set name=config.venv.name %}
{% set environment=config.environment %}

if [ -e .bashrc ]; then
  source ~/.bashrc
fi
export EPM_VIRTUAL_ENVIRONMENT='{{name}}'
export EPM_CACHE_DIR={{path}}
{% for name, value in environment.items() %}
export {{ name }}={{ value }}
{% endfor %}
epm venv banner
export PS1='\[\033[01;32m\]\u@\h - {{name}}@epm.venv\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\n\$ '


