{% set name=config['venv.name'] %}
{% set environment=config.get('environment', {}) %}
if [ -e .bashrc ]; then
  source ~/.bashrc
fi
export EPM_VENV_NAME='{{name}}'
export EPM_HOME_DIR={{path}}
export CONAN_USER_HOME=${EPM_HOME_DIR}
export EPM_CHANNEL={{ channel }}
{% for name, value in environment.items() %}
export {{ name }}={{ value }}
{% endfor %}
epm venv banner
export PS1='\[\033[01;32m\]\u@\h - {{name}}@epm.venv\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\n\$ '

